
@{
    ViewBag.Title = "查看自然人";
    Lawyer lawyer = ViewBag.Model;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>
    &nbsp;@(lawyer.Name)
    <a class="btn btn-default" onclick="history.back()"><i class="glyphicon glyphicon-arrow-left"></i>返回</a>    
</h2>
<hr />
<h3>&nbsp;自然人信息</h3>
<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>姓名：</th>
            <td colspan="3">@(lawyer.Name)</td>
        </tr>
        <tr>
            <th>性别：</th>
            <td>@(lawyer.Sex.GetDescription())</td>
            <th>出生年月日：</th>
            <td>@(lawyer.BornTime)</td>
        </tr>
        <tr>
            <th>联系地址：</th>
            <td colspan="3">@(lawyer.Address)</td>
        </tr>
        <tr>
            <th>证件类型</th>
            <td>@(lawyer.Credential.GetDescription())</td>
            <th>证件编号：</th>
            <td>@(lawyer.Number)</td>
        </tr>
        <tr>
            <th>联系电话：</th>
            <td>@(lawyer.TelPhone)</td>
            <th>电子邮箱</th>
            <td>@(lawyer.EMail)</td>
        </tr>
    </tbody>
</table>
@{ 
     Html.RenderPartial("_Subject", lawyer as Subject);
    Html.RenderAction("Score", "Grade", new { ELID = lawyer.ID, systemdata = SystemData.Lawyer });
    Html.RenderAction("DetailList", "Land", new { ELID = lawyer.ID, SystemData = SystemData.Lawyer });
    Html.RenderAction("Detail", "Conduct", new { ELID = lawyer.ID, systemdata = SystemData.Lawyer });
    Html.RenderAction("DetailList", "LandRecord", new { ELID = lawyer.ID, systemdata = SystemData.Lawyer });
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 嘉善县土地市场诚信体系建设管理系统 </title>
    <link rel="icon" href="~/loowootech1.png" />
    <link rel="shortcut icon" href="~/loowootech1.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/TodoMessage.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="~/Scripts/Contract.js"></script>
    <script src="~/Scripts/Faith.js"></script>
    <script>
        $(function () {
            $("#Modal").on("hidden.bs.modal", function () {
                $(this).removeData("bs.modal");
            });

            $('[data-toggle="popover"]').popover();
        })
    </script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home"><img alt="LoowooTech" src="~/loowootech2.png" /> </a>
                <a class="navbar-brand" href="/Home">嘉善县土地市场诚信管理系统</a>
            </div>
            @if (Identity != null && Identity.IsAuthenticated)
            {
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="Home".ToLower()?"active":"")">
                            <a class="nav-link" href="/Home"><i class="glyphicon glyphicon-home"></i>&nbsp;首页</a>
                        </li>
                      
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"><i class="glyphicon glyphicon-tags"></i>&nbsp;用地主体管理 <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="nav-item @(ViewBag.Controller.ToLower()=="Enterprise".ToLower()?"active":"")">
                                    <a class="nav-link" href="/Enterprise"><i class="glyphicon glyphicon-briefcase"></i>&nbsp;企业管理</a>
                                </li>
                                <li class="nav-item @(ViewBag.Controller.ToLower()=="Lawyer".ToLower()?"active":"")">
                                    <a class="nav-link" href="/Lawyer"><i class="glyphicon glyphicon-user"></i>&nbsp;自然人管理</a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-leaf"></i>&nbsp;诚信管理<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="nav-item @(ViewBag.Controller.ToLower()=="Land".ToLower()?"active":"")">
                                    <a class="nav-link" href="/Land"><i class="glyphicon glyphicon-cloud"></i>&nbsp;供地信息管理</a>
                                </li>
                                <li class="nav-item @(ViewBag.Controller.ToLower()=="LandRecord".ToLower()?"active":"")">
                                    <a class="nav-link" href="/LandRecord"><i class="glyphicon glyphicon-screenshot"></i>&nbsp;违法用地管理</a>
                                </li>
                                <li class="nav-item @(ViewBag.Controller.ToLower()=="Conduct".ToLower()?"active":"")">
                                    <a class="nav-link" href="/Conduct"><i class="glyphicon glyphicon-credit-card"></i>&nbsp;诚信行为管理</a>
                                </li>
                            </ul>
                        </li>
                       
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="FlowNode".ToLower()?"active":"")">
                            <a class="nav-link" href="/FlowNode"><i class="glyphicon glyphicon-hourglass"></i>&nbsp;审核管理</a>
                        </li>
                        <li class="dropdown @(ViewBag.Controller.ToLower()=="Roll".ToLower()?"open":"")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="@(ViewBag.Controller.ToLower()=="Roll".ToLower()?"true":"false")"><i class="glyphicon glyphicon-th-list"></i>&nbsp;名单<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="nav-item @(ViewBag.Action.ToLower()=="Black".ToLower()?"active":"")"><a class="nav-link" href="/Roll/Black"><i class="glyphicon glyphicon-paperclip"></i>&nbsp;黑名单</a></li>
                                <li class="nav-item @(ViewBag.Action.ToLower()=="Red".ToLower()?"active":"")"><a class="nav-link" href="/Roll/Red"><i class="glyphicon glyphicon-question-sign"></i>&nbsp;异常名单</a></li>
                            </ul>
                        </li>
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="Grade".ToLower()?"active":"")">
                            <a class="nav-link" href="/Grade"><i class="glyphicon glyphicon-grain"></i>&nbsp;信用评级计算</a>
                        </li>
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="Feed".ToLower()?"active":"")">
                            <a class="nav-link" href="/Feed"><i class="glyphicon glyphicon-headphones"></i>&nbsp;消息管理</a>
                        </li>
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="Recycle".ToLower()?"active":"")">
                            <a class="nav-link" href="/Recycle"><i class="glyphicon glyphicon-folder-open"></i>&nbsp;回收站</a>
                        </li>
                        <li class="nav-item @(ViewBag.Controller.ToLower()=="System".ToLower()?"active":"")">
                            <a class="nav-link" href="/System"><i class="glyphicon glyphicon-cog"></i>&nbsp;系统管理</a>
                        </li>
                    </ul>
      
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @(Identity.DisplayName)<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/User/LoginOut">注销</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                 <a href="/User/Login" class="btn btn-success navbar-btn">&nbsp; 登录</a>  
            }
           
        </div>
     
    </nav>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - 杭州陆吾科技信息咨询有限公司</p>
                </footer>
            </div>
        </div>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true" id="Modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
            </div>
        </div>
    </div>

   
</body>
</html>
<script>
    $(function () {
        $("a[name='Check']").click(function () {
            if (confirm("您确定？")) {
                ShowMessage("正在审核，请稍等......");
                var href = $(this).attr("href");
                var reason = $("input[name='Reason']").val();
                console.log(reason);
                href = href + "&&reason=" + reason;
                $.request(href, reason, function (json) {
                    if (json.result == 0) {
                        ShowErrorMessage(json.content);

                    } else {
                        ShowSuccessMessage("审核完成");
                        location.href = "@(Request.Url.PathAndQuery)";
                    }
                });
            }
            return false;
        });
        $("a[name='Relieve']").click(function () {
            var button = $(this);
            button.text("正在解除").attr("disabled", "disabled");
            ShowMessage("正在解除，请稍等......");
            var href = $(this).attr("href");
            $.request(href, null, function (json) {
                if (json.result == 0) {
                    ShowErrorMessage(json.content);
                } else {
                    ShowSuccessMessage("成功解除");
                    location.href = "@(Request.Url.PathAndQuery)";
                }
            });
            return false;
        });
    });
</script>
@{ 
    if (Model == null)
    {
        return;
    }

    Subject subject = Model as Subject;
    if (subject == null)
    {
        return;
    }
}

<h3>
    &nbsp;信用评级
    @if (Identity.Role == UserRole.Administrator)
    {
        @*<a href="" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-flag"></i>&nbsp;更改等级</a>*@
    }
</h3>



<table class="table table-striped table-bordered">
    <tr>
        <th>信用评级：</th>
        <td><h2 style="margin-top:5px;"><label class="label label-danger">@(subject.Degree.HasValue?subject.Degree.Value.ToString():"未评审")</label></h2> </td>
        <th>最终扣分值：</th>
        <td>@(subject.DeDuck)</td>
    </tr>
    <tr>
        <th>购地次数：</th>
        <td>@(subject.Times ?? 0)</td>
        <th>购地记录扣分值：</th>
        <td>@(subject.Values ?? .0)</td>

    </tr>
    <tr>
        <th>购地平均分值：</th>
        <td>@(subject.Average)</td>
        <th>违法用地扣分值：</th>
        <td>@(subject.Record ?? 0)</td>
    </tr>
</table>
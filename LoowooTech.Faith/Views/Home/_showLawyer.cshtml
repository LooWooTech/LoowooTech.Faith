@{ 
    if (Model == null)
    {
        return;
    }

    Lawyer lawyer = Model as Lawyer;
    if (lawyer == null)
    {
        return;
    }
}

<br />
<h3>
    &nbsp;@(lawyer.Name)
</h3>
<hr />
<h4>&nbsp;自然人信息</h4>
<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>姓名：</th>
            <td colspan="3">@(lawyer.Name)</td>
        </tr>
        <tr>
            <th>性别：</th>
            <td>@(lawyer.Sex.GetDescription())</td>
            <th>出生年月日：</th>
            <td>@(lawyer.BornTime)</td>
        </tr>
        <tr>
            <th>联系地址：</th>
            <td colspan="3">@(lawyer.Address)</td>
        </tr>
        <tr>
            <th>证件类型</th>
            <td>@(lawyer.Credential.GetDescription())</td>
            <th>证件编号：</th>
            <td>@(lawyer.Number)</td>
        </tr>
        <tr>
            <th>联系电话：</th>
            <td>@(lawyer.TelPhone)</td>
            <th>电子邮箱</th>
            <td>@(lawyer.EMail)</td>
        </tr>
    </tbody>
</table>
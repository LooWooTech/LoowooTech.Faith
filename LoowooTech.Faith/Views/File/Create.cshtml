@{ 
    Layout = null;
}


<div class="page-header">
    <h3 class="text-center">资料文件上传</h3>
</div>

<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/File/Upload">
            <div class="form-group">
                <label class="control-label col-md-3">文件：</label>
                <div class="col-md-7">
                    <input type="file" class="form-control" name="file" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">文件描述：</label>
                <div class="col-md-7">
                    <textarea name="Description" rows="3" class="form-control"></textarea>
                </div>
            </div>

            <input type="hidden" name="SID" value="@(Request.QueryString["SID"])" />
            <input type="hidden" name="Type" value="@(ViewBag.Type)" />
            <div class="form-group">
                <div class="col-md-7 col-md-offset-3">
                    <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-upload"></i>上传资料</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove-circle"></i>&nbsp; 取消</button>
                </div>
            </div>
        </form>
    </div>
</div>

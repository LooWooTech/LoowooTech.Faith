@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<FaithFile> list = ViewBag.List;
    var array = list.ToArray();
    int serial = 0;
}

<div class="page-header">
    <h3 class="text-center">@(ViewBag.Name)</h3>
</div>

<div class="row">
    @if (array.Length > 0)
    {
        <div class="col-md-10 col-md-offset-1">
            <div class="carousel slide" data-ride="carousel" id="Head">
                <ol class="carousel-indicators">
                    <li data-target="#Head" data-slide-to="0" class="active"></li>
                    @if (array.Length > 1)
                {
                    for (var i = 1; i < array.Length; i++)
                    {
                            <li data-target="#Head" data-slide-to="@(++serial)"></li>
                        }

                    }
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="/@(array[0].Path)" alt="@(array[0].Name)" />
                    </div>
                    @if (array.Length > 1)
                {
                    for (var i = 1; i < array.Length; i++)
                    {
                            <div class="item">
                                <img src="/@(array[i].Path)" alt="@(array[i].Name)" />
                            </div>
                        }

                    }

                </div>

                <a class="left carousel-control" href="#Head" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#Head" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
  
</div>



